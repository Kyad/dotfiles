// next_combination(N, r)
vector<int> mask(N, 1);
for (int i = 0; i < N - r; i++) {
  mask.at(i) = 0;
}
do {
  for (int i = 0; i < N; i++) {
    if (mask.at(i)) {
      // Do something
    }
  }
  if (M > 0) {
    ns.push_back(M);
  }
} while (next_permutation(mask.begin(), mask.end()));
